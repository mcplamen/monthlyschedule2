plugin.tx_monthlyschedule_monthlyschedule {
    view {
        templateRootPaths.0 = EXT:monthlyschedule/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_monthlyschedule_monthlyschedule.view.templateRootPath}
        partialRootPaths.0 = EXT:monthlyschedule/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_monthlyschedule_monthlyschedule.view.partialRootPath}
        layoutRootPaths.0 = EXT:monthlyschedule/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_monthlyschedule_monthlyschedule.view.layoutRootPath}
    }
    persistence {
        storagePid = {$plugin.tx_monthlyschedule_monthlyschedule.persistence.storagePid}
        #recursive = 1
    }
    features {
        #skipDefaultArguments = 1
        # if set to 1, the enable fields are ignored in BE context
        ignoreAllEnableFieldsInBe = 0
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

config.tx_extbase {
    persistence {
        classes {
            Mcplamen\Monthlyschedule\Domain\Model\Myday {
                mapping {
                    tableName = tx_monthlyschedule_domain_model_myday
                }
            }
            Mcplamen\Monthlyschedule\Domain\Model\Mymonth {
                mapping {
                    tableName = tx_monthlyschedule_domain_model_mymonth
                }
            }
        }
    }
}
page.includeCSS.monthlyschedule = EXT:monthlyschedule/Resources/Public/Css/calendar.css